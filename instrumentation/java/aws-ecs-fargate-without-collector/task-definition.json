{
    "family": "java-ecs-fargate-no-sidecar-example",
    "containerDefinitions": [
        {
            "name": "doorgame",
            "image": "ghcr.io/splunk/doorgame:1.0",
            "cpu": 0,
            "portMappings": [
                {
                    "name": "doorgame-9090-tcp",
                    "containerPort": 9090,
                    "protocol": "tcp",
                    "appProtocol": "http"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "OTEL_SERVICE_NAME",
                    "value": "doorgame"
                },
                {
                    "name": "OTEL_RESOURCE_ATTRIBUTES",
                    "value": "deployment.environment=test,service.version=1.0"
                },
                {
                    "name": "SPLUNK_PROFILER_ENABLED",
                    "value": "true"
                },
                {
                    "name": "SPLUNK_PROFILER_MEMORY_ENABLED",
                    "value": "true"
                },
                {
                    "name": "OTEL_EXPORTER_OTLP_ENDPOINT",
                    "value": "http://<Gateway Host>:4318"
                }
            ],
            "environmentFiles": [],
            "mountPoints": [],
            "volumesFrom": [],
            "dependsOn": [],
            "ulimits": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-create-group": "true",
                    "awslogs-group": "/ecs/doorgame",
                    "awslogs-region": "<AWS Region>",
                    "awslogs-stream-prefix": "ecs"
                },
                "secretOptions": []
            }
        }        
    ],
    "executionRoleArn": "arn:aws:iam::<AWS Account ID>:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "3072",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    }
}